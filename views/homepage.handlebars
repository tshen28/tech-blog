{{#each blogs as |blog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/api/blogs/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>{{blog.body}}</p>
    <p>Created by {{blog.user.username}} on {{format_date blog.date_created}}</p>
  </div>
</div>
{{/each}}