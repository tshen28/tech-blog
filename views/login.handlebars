<h2>Login</h2>
<form action="" id="login-form" class="mb-3">
    <div class="row">
        <div class="col">
            <input type="text" placeholder="username" id="username-login" class="form-control">
        </div>
        <div class="col">
            <input type="password" placeholder="password" id="password-login" class="form-control">
        </div>
        <div class="col">
            <button class="btn btn-info">Login</button>
        </div>
    </div>
</form>

<h2>Signup</h2>
<form action="" id="signup-form" class="mb-3">
    <div class="row">
        <div class="col">
            <input type="text" placeholder="username" id="username-signup" class="form-control">
        </div>
        <div class="col">
            <input type="password" placeholder="password" id="password-signup" class="form-control">
        </div>
        <div class="col">
            <button class="btn btn-info">Signup</button>
        </div>
    </div>
</form>

<script src="/js/login.js"></script>