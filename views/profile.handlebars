<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form" id="new-blog">
      <div class="form-group">
        <label for="blog-title">Blog Title</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-body">Body:</label>
        <textarea class="form-input" id="blog-body" name="blog-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

{{#each Blogs}}
<div>
    <input type="text" class="form-control form-control-lg mt-3" value="{{title}}">
    <input type="text" class="form-control" value="{{body}}">
    <p>Posted on {{updatedAt}}</p>
    <button class="deleteBtn btn btn-secondary me-4" value={{id}}>Delete</button>
</div>
<hr>
{{/each}}

<script src="/js/profile.js"></script>
